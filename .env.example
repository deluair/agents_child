# Agent Configuration Examples
# Copy this file to .env and modify as needed

# Basic Agent Settings
AGENT_NAME="MyAdvancedAgent"
AGENT_VERSION="1.0.0"
AGENT_MEMORY_PATH="./agent_memory"
AGENT_LOG_LEVEL="INFO"

# Memory Configuration
AGENT_MEMORY__SHORT_TERM_CAPACITY=100
AGENT_MEMORY__EPISODIC_CAPACITY=10000
AGENT_MEMORY__SEMANTIC_CAPACITY=50000
AGENT_MEMORY__CONSOLIDATION_THRESHOLD=0.8
AGENT_MEMORY__FORGETTING_RATE=0.001
AGENT_MEMORY__EMBEDDING_DIM=384

# Learning Configuration
AGENT_LEARNING__LEARNING_RATE=0.001
AGENT_LEARNING__BATCH_SIZE=32
AGENT_LEARNING__UPDATE_FREQUENCY=10
AGENT_LEARNING__EXPLORATION_RATE=0.1
AGENT_LEARNING__ADAPTATION_THRESHOLD=0.7

# Knowledge Graph Configuration
AGENT_KNOWLEDGE__MAX_ENTITIES=100000
AGENT_KNOWLEDGE__MAX_RELATIONS=500000
AGENT_KNOWLEDGE__SIMILARITY_THRESHOLD=0.8
AGENT_KNOWLEDGE__REASONING_DEPTH=3

# Model Configuration
AGENT_EMBEDDING_MODEL="all-MiniLM-L6-v2"
AGENT_LANGUAGE_MODEL="distilbert-base-uncased"
